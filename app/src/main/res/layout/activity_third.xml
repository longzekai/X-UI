<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_full_screen"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="FullScreen"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_quit_screen"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="QuitFullScreen"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_hidden_top_bar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="HiddenTopBar"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_show_top_bar"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="ShowTopBar"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_change_top_bar_color"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#5566aa"
            android:gravity="center"
            android:textSize="15sp"
            android:text="ChangeTopBarColor"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_change_status_bar_color"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#475aa4"
            android:gravity="center"
            android:textSize="15sp"
            android:text="ChangeStatusBarColor"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_set_navigation_icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="ChangeNavigationIcon"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_set_menu_icon"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="SetIconMenu"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_set_menu_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="SetTextMenu"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_show_single_button_dialog"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="#45aa78"
            android:gravity="center"
            android:textSize="15sp"
            android:text="SingleButtonDialog"
            android:textColor="#ffffff"/>

    </LinearLayout>
</ScrollView>
